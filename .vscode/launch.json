{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current Test File",
      "type": "debugpy",
      "request": "launch",
      "module": "unittest",
      "args": ["${file}"],
      "justMyCode": false
    },
    {
      "name": "Python Debugger: Current File with Arguments",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": "${command:pickArgs}",
      "justMyCode": false
    },
    {
      "name": "Python Debugger: Python File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
    }
  ]
}
